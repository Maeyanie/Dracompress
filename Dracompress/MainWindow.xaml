<Window x:Class="Dracompress.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dracompress"
        mc:Ignorable="d"
        Title="Dracompress" Height="600" Width="800">
    <Grid Name="WindowGrid" Background="{DynamicResource WindowBackgroundBrush}">
        <ListBox Name="FileList" Margin="4,4,4,44" AllowDrop="True" DragOver="FileList_DragOver" Drop="FileList_Drop" Background="{DynamicResource ControlBackgroundBrush}" Foreground="{DynamicResource ControlForegroundBrush}"/>
        <ProgressBar Name="ProgressBar" Height="10" Margin="4,3,4,4" VerticalAlignment="Bottom" Foreground="{DynamicResource AccentBrush}"/>
        <Button Content="DRC -> _STL" HorizontalAlignment="Center" Margin="0,0,300,20" VerticalAlignment="Bottom" Panel.ZIndex="1" Width="80" Click="ToSTL_Click" Background="{DynamicResource ControlBackgroundBrush}" Foreground="{DynamicResource ControlForegroundBrush}"/>
        <Button Content="_Clear List" HorizontalAlignment="Center" Margin="0,0,100,20" VerticalAlignment="Bottom" Panel.ZIndex="1" Width="80" Click="Clear_Click" Background="{DynamicResource ControlBackgroundBrush}" Foreground="{DynamicResource ControlForegroundBrush}"/>
        <Button Content="STL -> _DRC" HorizontalAlignment="Center" Margin="100,0,0,20" VerticalAlignment="Bottom" Panel.ZIndex="1" Width="80" Click="ToDRC_Click" IsDefault="True" Background="{DynamicResource ControlBackgroundBrush}" Foreground="{DynamicResource ControlForegroundBrush}"/>
        <Label x:Name="label" Content="Bits:" HorizontalAlignment="Center" Margin="250,0,0,16" VerticalAlignment="Bottom" Foreground="{DynamicResource ControlForegroundBrush}" Background="Transparent"/>
        <TextBox Name="DrcBits" HorizontalAlignment="Center" Margin="320,0,0,20" VerticalAlignment="Bottom" TextWrapping="Wrap" Text="16" Width="40" AutomationProperties.LabeledBy="{Binding ElementName=label, Mode=OneWay}" PreviewTextInput="DrcBits_PreviewTextInput" LostFocus="DrcBits_LostFocus" Background="{DynamicResource ControlBackgroundBrush}" Foreground="{DynamicResource ControlForegroundBrush}"/>

    </Grid>
</Window>
